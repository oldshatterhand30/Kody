#include <stdio.h>
int main()

{
int a;
int b;
char z;
int wynik;
printf("Podaj działanie w postaci a znak b\n");
scanf ("%d %c %d", &a, &z, &b);
if (z == '+'){wynik = a+b;}
if (z == '-'){wynik = a-b;}
if (z == '*'){wynik = a*b;}
if (z == '/' && b!=0){wynik = a/b;}
if (z == '/' && b=0){printf("Tak nie można");}
printf("Wynik wynosi %d", wynik);
}
